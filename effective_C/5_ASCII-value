/* Определение ASCII-значения в символе */
#include <stdio.h>
#include <locale.h>
int main (void)
{
    setlocale (0, "Russian");
    char c;
    printf("Введите символ: ");

    // Читаем ввод пользователя
    scanf("%c", &c);

    // %d отражает целочисленное значение символа
    // %c отображает сам символ
    printf("ASCII-код %c = %d\n", c, c);
    return 0;
}
