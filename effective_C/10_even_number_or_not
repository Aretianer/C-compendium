#include <stdio.h>
#include <locale.h>

int main (void)
{
    setlocale(0, "Russian");

    int number;
    printf("Введите целое число: \n");
    scanf("%d", &number);

    if (number %2 == 0)
        printf("%d - четное число.\n", number);
    else
        printf("%d - не четное число.\n", number);

    return 0;
}
