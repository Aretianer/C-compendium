/* Программа для определения, является ли символ алфавитным*/
#include <stdio.h>
#include <locale.h>

int main(void)
{
    setlocale(0,"Russian");

    char c;
    printf("Введите символ: \n");
    scanf("%c", &c);

    if ((c>='a' && c<='z') || (c>='A' && c<='Z'))
        printf("%c - алфавитный символ\n", c);
    else
        printf("%c - не алфавитный символ\n", c);
    return 0;
}
