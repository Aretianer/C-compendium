#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <time.h>
// https://uchet-jkh.ru/i/kak-sgenerirovat-randomnoe-cislo-v-c-v-diapazone/
int main()
{
    setlocale(0,"Russian");
    char name[20];
    // Переменной h присваивается значение числа на которое пользователь будет умножать или делить
    // Переменной b присваивается значение которое получится в результате операции
    // Переменной c присваивается результат операции
    // Переменной y присваивается значение которое посчитал пользователь
    // Переменной n присваивается значение 1 или 0, продолжить или остановиться
    int h, b, c, y, n;
    srand(time(NULL));
     int a = rand()%(11);
    printf("Здравствуйте, это программа-тренажёр изучения таблицы умножения.\n");
    printf("С её помощью вы очень быстро сможете умножать и делить целые числа.\n");
    printf("Введите свое имя: \n");
    scanf("%s", name);
    printf("Приятно познакомиться, %s!\n\n", &name);
    printf("Выберите пожалуйста режим сложности от 1 до 9.\n");
    scanf("%d", &h);
    printf("Вы выбрали %d уровень сложности.\n", h);
    printf("Решите пример: \n");
    c = (a * h);
    printf("%d * %d = \n", a, h);
    printf("Введите ответ: ");
    scanf("%d", &y);
        if (y == c)
        {
            printf("Здорово! Это правильный ответ!\n");
        }
        else
        {
            printf("Вы ошиблись! Правильный ответ: %d\n", c);
        }
    printf("Для продолжения нажмите 1, для выхода - 0. \n");
    scanf("%d", &n);
    while (n == 1)
    {
        // Переменная а - случайное число от 1 до 10
    int a = rand()%(11);

        printf("Решите пример: \n");
    c = (a * h);
    printf("%d * %d = \n", a, h);
    printf("Введите ответ: ");
    scanf("%d", &y);
        if (y == c)
        {
            printf("Здорово! Это правильный ответ!\n");
        }
        else
        {
            printf("Вы ошиблись! Правильный ответ: %d\n", c);
        }
    printf("Для продолжения нажмите 1, для выхода - 0. \n");
    scanf("%d", &n);
    }

    return 0;
}
