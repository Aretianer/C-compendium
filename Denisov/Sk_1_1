/*1-я глава книги М. И. Сканави "Элементарная математика".
Здесь и далее будут приводится примеры из книги в виде программ.*/

#include <iostream>
#include <Windows.h>

void additionLows(int a, int b, int c)
{
	std::cout << "Переместительный закон сложения: " <<a<< "+" << b <<"=" << b <<
		"+" << a << std::endl;
	std::cout << "Сочетательный закон сложения: (" << a << "+" << b << ")" << "+" <<
		c << "=" << a << "+" <<  "(" << b << "+" << c << ")" << std::endl << std::endl;
}

void multiplicationLows(int a, int b, int c)
{
	std::cout << "Переместительный закон умножения: " << a << "*" << b << "=" << b <<
		"*" << a << std::endl;
	std::cout << "Сочетательный закон умножения: (" << a << "*" << b << ")" << "*" <<
		c << "=" << a << "*" << "(" << b << "*" << c << ")" << std::endl << std::endl;
	std::cout << "Распределительный закон умножения (относительно сложения): (" << a <<
		"+" << b << ")" << "*" << c << "=" << a << "*" << c << "+" << b << "*" <<
		c << std::endl;


}

int main()
{
	setlocale(LC_ALL, "Russian");
	std::cout << "Что такое натуральные числа? Это числа которые выражают количество предметов." << std::endl;
	std::cout << "Каждое следующее натуральное число получается прибавление единицы к предыдущему." << std::endl;
	std::cout << "Так получается натуральный ряд чисел: 1, 2, 3, 4, 5... и до бесконечности" << std::endl;
	std::cout << "А теперь сформулируем законы сложения и умножения:" << std::endl;
	std::cout << "Введите первое число: " << std::endl;
	int a, b, c;
	std::cin >> a;
	std::cout << "Введите второе число: " << std::endl;
	std::cin >> b;
	std::cout << "Введите третье число: " << std::endl;
	std::cin >> c;
	additionLows(a, b, c);
	multiplicationLows(a, b, c);
	return 0;
}
